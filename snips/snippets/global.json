{
  "iframe": {
    "prefix": ["iframe"],
    "body": [
      "::: {#fig-${1:cap}}",
      "",
      "${2:paste embed info}",
      "",
      "${3:Caption}",
      ":::"
    ]
  },
  "fig3": {
    "prefix": ["fig3"],
    "body": [
      "::: {#fig-${1:label} layout=\"[[1, 1], [1]]\"}",
      "",
      "![${2:subcap1}](${3:figure}){#fig-$2}",
      "",
      "![${4:subcap1}](${5:figure}){#fig-$4}",
      "",
      "![${6:subcap1}](${7:figure}){#fig-$6}",
      "",
      "${8:caption}",
      "::::"
    ]
  },
  "fig2": {
    "prefix": ["fig2"],
    "body": [
      "::: {#fig-${1:label} layout=\"[1,1]\"}",
      "",
      "![${2:subcap1}](${3:figure}){#fig-$2}",
      "",
      "![${4:subcap1}](${5:figure}){#fig-$4}",
      "",
      "${6:caption}",
      "::::"
    ]
  },
  "eq": {
    "prefix": ["eq"],
    "body": ["\\$\\$", "$1", "\\$\\$ {#eq-${2: label}}"]
  },
  "py": {
    "prefix": ["py"],
    "body": ["```{python} ", "$1", "```"]
  },
  "rcode": {
    "prefix": ["rcode"],
    "body": ["```{r} ", "$1", "```"]
  },
  "pyfig2": {
    "prefix": ["pyfig2"],
    "body": [
      "```{python} ",
      "#| label: fig-$1",
      "#| fig-cap: \"$2\"",
      "#| fig-subcap: ",
      "#|    - \"$3\"",
      "#|    - \"$4\"",
      "#| layout-ncol: 2",
      "",
      "import numpy as np",
      "import matplotlib.pyplot as plt",
      "plt.style.use(['science', 'ieee'])",
      "$5",
      "plt.legend()",
      "plt.show()",
      "",
      "$6",
      "plt.legend()",
      "plt.show()",
      "```"
    ]
  },
  "pyfig1": {
    "prefix": ["pyfig1"],
    "body": [
      "```{python}",
      "#| label: fig-$1",
      "#| fig-cap: \"$2\"",
      "",
      "import numpy as np",
      "import matplotlib.pyplot as plt",
      "",
      "plt.style.use(['science', 'ieee'])",
      "$3",
      "plt.show()",
      "```"
    ]
  },
  "div": {
    "prefix": ["div"],
    "body": ["::: {$1}", "$2", ":::"]
  },
  "figref": {
    "prefix": ["figref"],
    "body": ["@fig-$1"]
  },
  "tblref": {
    "prefix": ["tblref"],
    "body": ["@tbl-$1"]
  },
  "eqnref": {
    "prefix": ["eqnref"],
    "body": ["@eq-$1"]
  },
  "secref": {
    "prefix": ["secref"],
    "body": ["@sec-$1"]
  },
  "crossref": {
    "prefix": ["crossref"],
    "body": [
      "crossref:",
      "  fig-title: Figure",
      "  tbl-title: Table",
      "  title-delim: .",
      "  fig-prefix: Figure",
      "  tbl-prefix: Table",
      "  eq-prefix: Eq."
    ]
  },
  "fig": {
    "prefix": ["fig"],
    "body": ["![${1:cap1}](${1:figure}){#fig-$1}"]
  },
  "background image": {
    "prefix": ["bgimg"],
    "body": [
      "{data-background-image=\"${1: ./imge/}\"  data-background-position=right  data-background-size=contain}"
    ]
  },
  "pl": {
    "prefix": ["pl"],
    "body": ["::: {.pull-left}", "$0", ":::"]
  },
  "pr": {
    "prefix": ["pr"],
    "body": ["::: {.pull-right}", "$0", ":::"]
  },
  "cl": {
    "prefix": ["cl"],
    "body": ["::: {.left-column}", "$0", ":::"]
  },
  "cr": {
    "prefix": ["cr"],
    "body": ["::: {.right-column}", "$0", ":::"]
  },
  "container": {
    "prefix": ["con"],
    "body": ["::: {.container}", "$1", ":::"]
  },
  "col": {
    "prefix": ["col"],
    "body": [":::: {.col}", "$1", "::::"]
  },
  "2col": {
    "prefix": ["2col"],
    "body": [
      "::: {.container}",
      "::: {.col}",
      "$1",
      ":::",
      "::: {.col}",
      "$2",
      ":::",
      ":::"
    ]
  },
  "cols": {
    "prefix": ["cols"],
    "body": [
      "::: {.columns}",
      "::: {.column width=\"$1\"}",
      "$2",
      ":::",
      "::: {.column width=\"$3\"}",
      "$4",
      ":::",
      ":::"
    ]
  },
  "lay": {
    "prefix": ["lay"],
    "body": ["::: {layout=\"[$1]\"}", ":::"]
  },
  "layout-valign": {
    "prefix": ["valign"],
    "body": ["layout-valign=\"$1\""]
  },
  "callout": {
    "prefix": ["call"],
    "body": ["::: {.callout-$1}", "$0", ":::"]
  },
  "col2": {
    "prefix": ["col2"],
    "body": ["::: {layout-ncol=2}", "$0", ":::"]
  },
  "col3": {
    "prefix": ["col3"],
    "body": ["::: {layout-ncol=3}", "$0", ":::"]
  },
  "absolute": {
    "prefix": ["absolute"],
    "body": ["{.absolute top=$1 left=$2 width=\"$3\" height=\"$4\"}"]
  },
  "width": {
    "prefix": ["width"],
    "body": ["{width=\"$3\"}"]
  },
  "hidden": {
    "prefix": ["hidden"],
    "body": ["{visibility=\"hidden\"}"]
  },
  "uncount": {
    "prefix": ["uncount"],
    "body": ["{visibility=\"uncounted\"}"]
  },
  "align": {
    "prefix": ["align"],
    "body": ["{fig-align=\"center\"}"]
  },
  "fragment": {
    "prefix": ["frag"],
    "body": ["::: {.fragment}", "$1", ":::"]
  },
  "notes": {
    "prefix": ["notes"],
    "body": ["::: {.notes}", "$1", ":::"]
  },
  "alert": {
    "prefix": ["alert"],
    "body": ["[$0]{.alert}"]
  },
  "br": {
    "prefix": ["br"],
    "body": ["<br/>"]
  },
  "importmarkdown": {
    "prefix": ["importmd"],
    "body": ["from IPython.display import display, Markdown"]
  },
  "pymarkdown": {
    "prefix": ["pymd"],
    "body": ["display(Markdown(\"\"\"", "{$1}", "\"\"\".format($1 = $1)))", ""]
  },
  "begin": {
    "body": "\\begin{${1:something}}\n\t$0\n\\end{$1}",
    "description": "begin{} / end{}",
    "prefix": "begin"
  },
  "eqalign": {
    "body": "\\begin{align}\n\t$0\n\\end{align}",
    "description": "Align",
    "prefix": "eqalign"
  },
  "notation": {
    "body": "$1 &= \\text{$2} \\\\\\",
    "description": "notation of variables in an equation",
    "prefix": "notation"
  }
}
